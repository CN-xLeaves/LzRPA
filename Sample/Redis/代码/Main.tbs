
Function Main() As Long
	
    ' 启动本地 Redis 服务器，端口 6379（在 redis.conf 中配置）
    RedisServer_Run()
    
    ' 创建 Redis 客户端对象
    Dim r As Redis
    
    ' 连接到 Redis 服务器
    r.Connect("127.0.0.1", 6379)
    
    ' 写入数据
    r.SetVal("a", 1234)
    
    ' 读取数据
    TracePrint r.GetVal("a")
    
    ' 通过客户端关闭服务器 (会在服务器关闭之前保存数据)
    r.Shutdown()
    
    ' 暴力关闭服务器 (这种方式直接结束进程，不会保存数据)
    RedisServer_ForceClose(PID)
    
End Function
